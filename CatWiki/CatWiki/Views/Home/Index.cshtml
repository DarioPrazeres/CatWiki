@model IEnumerable<CatWiki.Models.Breeds>

@{
    ViewBag.Title = "Index";
}

<div class="searchSection">
    <div class="introduce">
        <img src="~/assets/CatwikiLogoWhite.svg" />
        <p>Get to know more about your <br /> cat breed</p>
        <div class="search">
            <input type="text" id="pesquisaInput" placeholder="Enter your breed" oninput="realizarPesquisa()" />
            <img src="~/assets/search.png" class="imgSearch" />
        </div>
        <div class="results">
            <div id="resultadoPesquisa">
                @foreach (var item in Model)
                {
                    <a href="/Home/Details/@item.reference_image_id">
                        <p class="id-details">@item.reference_image_id</p>
                        <p class="name-cat">
                            @item.name
                        </p>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
<div class="most-breeds">
    <div class="discover-more">
        <h6>Most Searched Breeds</h6>
        <hr />
        <h2>66+ Breeds For you<br /> to discover</h2>
        <a class="see-more" href="/Home/list">SEE MORE <img src="~/assets/seta-direita.png" /></a>
    </div>
    <div class="breeds-data">
        @for(int count = 0; count < 4; count++)
            {
                <div class="breed-description">
                    <p class="image-id-cat">@Model.ToArray()[count].reference_image_id</p>
                    <a class="a-im" href="/Home/Details/@Model.ToArray()[count].reference_image_id">
                        <img class="image-cat-link" src="" />
                        <h5>@Model.ToArray()[count].name</h5>
                    </a>
                </div>
            }
    </div>
</div>
<div class="have-cat">
    <div class="why-cat">
        <hr />
        <h2>Why should you have a cat?</h2>
        <p>Having a cat around you can actually trigger the release of calming chemicals in your body which lower your stress and anxiety leves</p>
        <a href="https://www.wondercide.com/blogs/thewonderside-pets-family/20-reasons-why-you-should-adopt-a-cat">READ MORE <span class="icon-seta"></span></a>
    </div>
    <div class="image-Cat">
        <div class="image-Cat-first">
            <img src="~/assets/image-2.png" width="273" />
            <img src="~/assets/image-1.png" width="195" class="right-image" />
        </div>
        <div><img src="~/assets/image-3.png" width="195" height="385" /></div>
    </div>
</div>

<script src="~/Scripts/Script.js"></script>